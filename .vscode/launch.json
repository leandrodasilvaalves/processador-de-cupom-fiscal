{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Worker",
            "program": "${workspaceFolder}/src/worker_app/program.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "preLaunchTask": "load pending files",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Webapi",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}",
            "args": [
                "src.webapi.program:app",
                // "--reload"
            ],
            "justMyCode": true,
            "jinja": true,
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Docker Build Images",
            "type": "node-terminal",
            "request": "launch",
            "command": "docker compose build --no-cache",
            "env": {                
                "TAG_VERSION": "${input:ImageTagInput}"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
        }
    ],
    "inputs": [
        {
            "id": "ImageTagInput",
            "type": "promptString",
            "description": "Informe a TAG da imagem (ex: 1.0.0 ou latest)",
            "default": "latest"
        }
    ]
}